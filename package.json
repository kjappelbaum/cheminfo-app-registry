{
  "name": "cheminfo-app-registry",
  "description": "App store for all the tools developed in the cheminfo organizations to increase the findability of the tools",
  "version": "0.1.0",
  "homepage": "./",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/cheminfo-app-registry.git"
  },
  "keywords": [],
  "author": "Kevin M. Jablonka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/cheminfo-app-registry/issues"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "clsx": "^1.1.1",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3"
  },
  "scripts": {
    "start": "npm run watch:css && react-scripts start",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "eslint": "eslint src --ext js,jsx",
    "eslint-fix": "npm run eslint -- --fix",
    "build:css": "postcss src/assets/tailwind.css -o src/assets/main.css",
    "watch:css": "postcss src/assets/tailwind.css -o src/assets/main.css",
    "createAppListing": "node createAppListing/index.js"
  },
  "eslintConfig": {
    "extends": "cheminfo-react",
    "parser": "babel-eslint",
    "rules": {
      "import/no-unresolved": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.2.6",
    "eslint": "^7.30.0",
    "eslint-config-cheminfo-react": "^6.2.3",
    "eslint-plugin-hooks": "^0.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.2",
    "prop-types": "^15.7.2",
    "tailwindcss": "^2.2.4"
  },
  "staticPath": "public"
}
